/* calculator */
while True:
    print("\n1.+  2.-  3.*  4./  5.Exit")
    c = input()
    if c=="5":
        break
    x = float(input("First: "))
    y = float(input("Second: "))
    if c=="1":
        print( x+y)
    elif c=="2":
        print( x-y)
    elif c=="3":
        print( x*y)
    elif c=="4":
        if y==0:
            print("Error")
        else:
            print( x/y)
    else:
        print("Wrong option")
